FROM python:3.12-slim

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    curl \
    git \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir uv

WORKDIR /app

COPY pyproject.toml uv.lock ./
COPY src/canban_connectors ./src/canban_connectors

# TODO убрать --extra dev, пока что он нужен для работы без pydantic-settings
# Устанавливаем базовые зависимости и группу kaiten-canban-connector
RUN uv sync --frozen --extra kaiten-canban-connector --extra dev

ENV PATH="/app/.venv/bin:$PATH"
